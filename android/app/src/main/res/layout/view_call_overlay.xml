<?xml version="1.0" encoding="utf-8"?>
<!-- 来电弹窗视图布局 - 横幅样式 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="32dp"
    android:paddingStart="16dp"
    android:paddingEnd="16dp"
    android:paddingBottom="16dp">
    
    <!-- 来电卡片 -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="12dp"
        app:cardCornerRadius="20dp"
        app:cardBackgroundColor="@android:color/white">
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="24dp"
            android:paddingBottom="24dp"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:gravity="center_vertical"
            android:minHeight="96dp">
            
            <!-- 左侧：灰色电话图标 -->
            <ImageView
                android:id="@+id/caller_avatar"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_marginEnd="20dp"
                android:padding="12dp"
                android:background="@drawable/circle_background_gray"
                android:src="@android:drawable/ic_menu_call"
                android:tint="#757575"
                android:scaleType="centerInside"
                android:contentDescription="来电图标" />
            
            <!-- 中间：来电信息 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                
                <!-- 来电者名称 -->
                <TextView
                    android:id="@+id/caller_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="智码科技 1531139..."
                    android:textColor="#000000"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:maxLines="1"
                    android:ellipsize="end" />
                
                <!-- 通话类型 -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    
                    <!-- 通话图标 -->
                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_marginEnd="6dp"
                        android:src="@android:drawable/ic_menu_call"
                        android:tint="#4CAF50"
                        android:contentDescription="通话图标" />
                    
                    <!-- 通话类型文字 -->
                    <TextView
                        android:id="@+id/call_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="邀请你语音通话"
                        android:textColor="#4CAF50"
                        android:textSize="15sp" />
                    
                </LinearLayout>
                
            </LinearLayout>
            
            <!-- 右侧：操作按钮 -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                
                <!-- 接听按钮 -->
                <LinearLayout
                    android:id="@+id/answer_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="8dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:clickable="true"
                    android:focusable="true">
                    
                    <ImageView
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:src="@android:drawable/ic_menu_call"
                        android:tint="#4CAF50"
                        android:contentDescription="接听" />
                    
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="接听"
                        android:textColor="#4CAF50"
                        android:textSize="13sp" />
                    
                </LinearLayout>
                
                <!-- 拒绝按钮 -->
                <LinearLayout
                    android:id="@+id/reject_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="8dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:clickable="true"
                    android:focusable="true">
                    
                    <ImageView
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:src="@android:drawable/ic_menu_close_clear_cancel"
                        android:tint="#F44336"
                        android:contentDescription="拒绝" />
                    
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="拒绝"
                        android:textColor="#F44336"
                        android:textSize="13sp" />
                    
                </LinearLayout>
                
            </LinearLayout>
            
        </LinearLayout>
        
    </androidx.cardview.widget.CardView>
    
</LinearLayout>
